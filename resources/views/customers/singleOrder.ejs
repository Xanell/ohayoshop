<section class="status">
    <div class="container mx-auto">
        <div class="status-box w-full lg:w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-12">
                <h1 class="text-xl font-bold">Отслеживание заказа</h1>
                <h6 class="bg-white py-1 rounded-full px-4 text-green-600 text-xs"><%=
                    order._id %></h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
            </div>
            <ul>
                <li class="status_line text-sm md:text-xl pb-16" data-status="order_placed"><span>Заказ размещен</span>
                </li>
                <li class="status_line text-sm md:text-xl pb-16" data-status="confirmed"><span>Заказ принят в обработку</span>
                </li>
                <li class="status_line text-sm md:text-xl pb-16" data-status="prepared"><span>Сбор заказа</span></li>
                <li class="status_line text-sm md:text-xl pb-16" data-status="delivered"><span>Отправлен в службу доставки</span>
                </li>
                <li class="status_line text-sm md:text-xl" data-status="completed"><span>Получен</span></li>
            </ul>
        </div>
    </div>
</section>